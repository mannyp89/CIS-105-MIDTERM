def sum_of_even_numbers():
    # Get input from the user and split into a list of numbers
    numbers = input("Enter a list of numbers separated by spaces: ").split()
    
    # Convert the input strings to integers
    numbers = [int(num) for num in numbers]
    
    total = 0
    for num in numbers:
        if num % 2 == 0:
            total += num
    
    return total

print("The sum of the even numbers in the list is:", sum_of_even_numbers())

